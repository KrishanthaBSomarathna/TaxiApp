<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BookingActivity">

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
        <LinearLayout android:padding="16dp" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content">
            <TextView android:id="@+id/driverNameTv" android:text="Driver:" android:textSize="18sp" android:layout_width="match_parent" android:layout_height="wrap_content"/>
            <EditText android:id="@+id/tripDateTimeEt" android:hint="Trip date &amp; time (yyyy-MM-dd HH:mm)" android:layout_width="match_parent" android:layout_height="wrap_content"/>
            <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content">
                <Button android:id="@+id/selectDestBtn" android:text="Select Destination" android:layout_width="0dp" android:layout_weight="1" android:layout_height="wrap_content"/>
                <TextView android:id="@+id/destinationTv" android:text="No destination" android:layout_width="0dp" android:layout_weight="1" android:layout_height="wrap_content"/>
            </LinearLayout>
            <RadioGroup android:id="@+id/paymentRg" android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="horizontal">
                <RadioButton android:id="@+id/rbCash" android:text="Cash" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
                <RadioButton android:id="@+id/rbCard" android:text="Credit Card" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
            </RadioGroup>
            <Button android:id="@+id/confirmBtn" android:text="Confirm Booking" android:layout_width="match_parent" android:layout_height="wrap_content"/>
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>