{
  "rules": {
    ".read": false,
    ".write": false,

    "users": {
      "$uid": {
        ".read": "auth != null && auth.uid == $uid",
        ".write": "auth != null && auth.uid == $uid"
      }
    },

    "bookings": {
      "$bookingId": {
        ".read": "auth != null && (data.child('userId').val() == auth.uid || newData.child('userId').val() == auth.uid)",
        ".write": "auth != null"
      }
    },

    "driver_locks": {
      "$driver": {
        "$slot": {
          ".read": "auth != null",
          ".write": "auth != null"
        }
      }
    },

    "drivers": {
      "$driverId": {
        ".read": "auth != null",
        ".write": "auth != null"
      }
    }
  }
}
